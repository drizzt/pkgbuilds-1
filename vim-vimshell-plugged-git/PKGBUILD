# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=vim-vimshell-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git
_gitname=vimshell.vim
pkgver=20141216
pkgrel=1
pkgdesc="Powerful shell implemented in Vimscript ($USER)"
arch=('any')
depends=('vim'
         "vim-vimproc-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git")
optdepends=("vim-unite-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git: unite interface"
            'zsh: zsh completion')
makedepends=('git')
groups=('vim-plugins')
url="https://github.com/Shougo/vimshell.vim"
license=('MIT')
source=(git+https://github.com/Shougo/vimshell.vim)
sha256sums=('SKIP')
install=vimshell.install

pkgver() {
  cd $_gitname
  git log -1 --format="%cd" --date=short | sed "s|-||g"
}

prepare() {
  cd $_gitname
  git config remote.origin.url https://git::@${source##git+https://}.git
}

package() {
  cd $_gitname
  install -dm 755 "$pkgdir/$HOME/.vim/plugged/$_gitname"
  for _file in `ls -A`; do
    cp -dpr --no-preserve=ownership $_file "$pkgdir/$HOME/.vim/plugged/$_gitname"
  done
  find "$pkgdir" -mindepth 1 -maxdepth 1 -exec chown -R $USER:users '{}' \;
}
