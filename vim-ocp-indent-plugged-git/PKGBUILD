# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=vim-ocp-indent-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git
_gitname=ocp-indent
pkgver=0.0.0
pkgrel=1
pkgdesc="Indentation tool for OCaml, to be used from editors like Emacs and Vim ($USER)"
arch=('any')
depends=('vim')
makedepends=('git' 'ocp-build')
groups=('vim-plugins')
url="https://github.com/OCamlPro/ocp-indent"
license=('custom:LGPL3')
source=(git+https://github.com/OCamlPro/$_gitname)
sha256sums=('SKIP')
install=ocp-indent.install

pkgver() {
  cd $_gitname
  git log -1 --format="%cd" --date=short | sed "s|-||g"
}

prepare() {
  cd $_gitname
  git config remote.origin.url https://git::@${source##git+https://}.git
}

build() {
  cd $_gitname

  msg 'Building...'
  ./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/vim-ocp-indent \
    --sysconfdir=/etc \
    --sharedstatedir=/usr/share/vim-ocp-indent \
    --localstatedir=/var/lib/vim-ocp-indent
  make
}

package() {
  cd $_gitname
  install -dm 755 "$pkgdir/$HOME/.vim/plugged/$_gitname"
  msg 'Installing...'
  make DESTDIR="$pkgdir" install
  for _file in README.md .git; do
    cp -dpr --no-preserve=ownership $_file "$pkgdir/$HOME/.vim/plugged/$_gitname"
  done
  find "$pkgdir" -mindepth 1 -maxdepth 1 -exec chown -R $USER:users '{}' \;
}
