# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=vim-dialyzer-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git
_gitname=vim-dialyzer
pkgver=20131116
pkgrel=1
pkgdesc="Makes using Erlang's Dialyzer easier and faster from inside Vim ($USER)"
arch=('any')
depends=('vim'
         "vim-dispatch-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git")
makedepends=('git')
groups=('vim-plugins')
url="https://github.com/fishcakez/vim-dialyzer"
license=('Apache')
source=(git+https://github.com/fishcakez/vim-dialyzer)
sha256sums=('SKIP')
install=dialyzer.install

pkgver() {
  cd $_gitname
  git log -1 --format="%cd" --date=short | sed "s|-||g"
}

prepare() {
  cd $_gitname
  git config remote.origin.url https://git::@${source##git+https://}.git
}

package() {
  cd $_gitname
  install -dm 755 "$pkgdir/$HOME/.vim/plugged/$_gitname"
  for _file in `ls -A`; do
    cp -dpr --no-preserve=ownership $_file "$pkgdir/$HOME/.vim/plugged/$_gitname"
  done
  find "$pkgdir" -mindepth 1 -maxdepth 1 -exec chown -R $USER:users '{}' \;
}
