# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=vim-vertical-help-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git
_gitname=VerticalHelp
pkgver=20131103
pkgrel=1
pkgdesc="Launch help in vertical window for wide-screen displays ($USER)"
arch=('any')
depends=('vim')
makedepends=('dos2unix' 'git')
groups=('vim-plugins')
url="https://github.com/vim-scripts/VerticalHelp"
license=('custom:vim')
source=(git+https://github.com/vim-scripts/VerticalHelp)
sha256sums=('SKIP')
install=vertical-help.install

pkgver() {
  cd $_gitname
  git log -1 --format="%cd" --date=short | sed "s|-||g"
}

prepare() {
  cd $_gitname
  git config remote.origin.url https://git::@${source##git+https://}.git
  find . -name '.git' -prune -o -type f -exec dos2unix '{}' \;
}

package() {
  cd $_gitname
  install -dm 755 "$pkgdir/$HOME/.vim/plugged/$_gitname"
  for _file in `ls -A`; do
    cp -dpr --no-preserve=ownership $_file "$pkgdir/$HOME/.vim/plugged/$_gitname"
  done
  find "$pkgdir" -mindepth 1 -maxdepth 1 -exec chown -R $USER:users '{}' \;
}
