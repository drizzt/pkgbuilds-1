# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=vim-patchreview-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git
_gitname=patchreview-vim
pkgver=20140807
pkgrel=1
pkgdesc="Vim global plugin for doing single, multi-patch or diff code reviews ($USER)"
arch=('any')
depends=('patch' 'patchutils' 'vim')
optdepends=('wiggle-git: use wiggle to create an additional diff when a review fails with conflicts/rejections')
makedepends=('git')
groups=('vim-plugins')
url="https://github.com/junkblocker/patchreview-vim"
license=('custom:vim')
source=(git+https://github.com/junkblocker/patchreview-vim)
sha256sums=('SKIP')

pkgver() {
  cd $_gitname
  git log -1 --format="%cd" --date=short | sed "s|-||g"
}

prepare() {
  cd $_gitname
  git config remote.origin.url https://git::@${source##git+https://}.git
}

package() {
  cd $_gitname
  install -dm 755 "$pkgdir/$HOME/.vim/plugged/$_gitname"
  for _file in `ls -A`; do
    cp -dpr --no-preserve=ownership $_file "$pkgdir/$HOME/.vim/plugged/$_gitname"
  done
  find "$pkgdir" -mindepth 1 -maxdepth 1 -exec chown -R $USER:users '{}' \;
}
