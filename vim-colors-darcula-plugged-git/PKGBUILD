# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=vim-colors-darcula-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git
_gitname=vim-colorscheme-darcula
pkgver=20140811
pkgrel=1
pkgdesc="The Jetbrains Darcula color scheme for Vim ($USER)"
arch=('any')
depends=('vim')
makedepends=('git')
groups=('vim-plugins')
url="https://github.com/alem0lars/vim-colorscheme-darcula"
license=('custom:vim')
source=(git+https://github.com/alem0lars/vim-colorscheme-darcula)
sha256sums=('SKIP')
install=darcula.install

pkgver() {
  cd $_gitname
  git log -1 --format="%cd" --date=short | sed "s|-||g"
}

package() {
  cd $_gitname
  install -dm 755 "$pkgdir/$HOME/.vim/plugged/$_gitname"
  for _file in `ls -A`; do
    cp -dpr --no-preserve=ownership $_file "$pkgdir/$HOME/.vim/plugged/$_gitname"
  done
  find "$pkgdir" -mindepth 1 -maxdepth 1 -exec chown -R $USER:users '{}' \;
}
