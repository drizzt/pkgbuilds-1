# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=vim-vimproc-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git
_gitname=vimproc.vim
pkgver=20141003
pkgrel=1
pkgdesc="Interactive command execution in Vim ($USER)"
arch=('i686' 'x86_64')
depends=('vim')
makedepends=('git' 'make')
groups=('vim-plugins')
url="https://github.com/Shougo/vimproc.vim"
license=('custom:vim')
source=(git+https://github.com/Shougo/vimproc.vim)
sha256sums=('SKIP')

pkgver() {
  cd $_gitname
  git log -1 --format="%cd" --date=short | sed "s|-||g"
}

prepare() {
  cd $_gitname
  git config remote.origin.url https://git::@${source##git+https://}.git
}

build() {
  cd $_gitname
  make -f make_unix.mak
}

package() {
  cd $_gitname
  install -dm 755 "$pkgdir/$HOME/.vim/plugged/$_gitname"
  for _file in `ls -A`; do
    cp -dpr --no-preserve=ownership $_file "$pkgdir/$HOME/.vim/plugged/$_gitname"
  done
  find "$pkgdir" -mindepth 1 -maxdepth 1 -exec chown -R $USER:users '{}' \;
}
