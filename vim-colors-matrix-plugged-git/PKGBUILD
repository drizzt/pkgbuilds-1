# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=vim-colors-matrix-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git
_gitname=matrix.vim
pkgver=20101017
pkgrel=1
pkgdesc="Matrix-like color scheme for Vim ($USER)"
arch=('any')
depends=('vim')
makedepends=('git')
groups=('vim-plugins')
url="https://github.com/vim-scripts/matrix.vim"
license=('custom:vim')
source=(git+https://github.com/vim-scripts/$_gitname#commit=7fcd844d6d882b41437f277adf9351fd25f64be1)
sha256sums=('SKIP')

pkgver() {
  cd $_gitname
  git log -1 --format="%cd" --date=short | sed "s|-||g"
}

prepare() {
  cd $_gitname
  git config remote.origin.url https://git::@github.com/vim-scripts/matrix.vim.git
}

package() {
  cd $_gitname
  install -dm 755 "$pkgdir/$HOME/.vim/plugged/$_gitname"
  for _file in `ls -A`; do
    cp -dpr --no-preserve=ownership $_file "$pkgdir/$HOME/.vim/plugged/$_gitname"
  done
  find "$pkgdir" -mindepth 1 -maxdepth 1 -exec chown -R $USER:users '{}' \;
}
