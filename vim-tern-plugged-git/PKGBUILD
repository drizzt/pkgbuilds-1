# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=vim-tern-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git
_gitname=tern_for_vim
pkgver=20141009
pkgrel=1
pkgdesc="Tern-based JavaScript editing support for Vim ($USER)"
arch=('any')
depends=('nodejs' 'vim')
makedepends=('git')
groups=('vim-plugins')
url="https://github.com/marijnh/tern_for_vim"
license=('custom:vim')
source=(git+https://github.com/marijnh/tern_for_vim)
sha256sums=('SKIP')

pkgver() {
  cd $_gitname
  git log -1 --format="%cd" --date=short | sed "s|-||g"
}

prepare() {
  cd $_gitname
  git config remote.origin.url https://git::@${source##git+https://}.git
}

build() {
  cd $_gitname
  npm install --python=python2
}

package() {
  cd $_gitname
  install -dm 755 "$pkgdir/$HOME/.vim/plugged/$_gitname"
  for _file in `ls -A`; do
    cp -dpr --no-preserve=ownership $_file "$pkgdir/$HOME/.vim/plugged/$_gitname"
  done
  find "$pkgdir" -mindepth 1 -maxdepth 1 -exec chown -R $USER:users '{}' \;
}
