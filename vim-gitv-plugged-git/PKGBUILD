# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=vim-gitv-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git
_gitname=gitv
pkgver=20140329
pkgrel=1
pkgdesc="gitk for Vim ($USER)"
arch=('any')
depends=('vim'
         "vim-fugitive-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git")
makedepends=('git')
groups=('vim-plugins')
url="https://github.com/gregsexton/gitv"
license=('custom:vim')
source=(git+https://github.com/gregsexton/gitv)
sha256sums=('SKIP')
install=gitv.install

pkgver() {
  cd $_gitname
  git log -1 --format="%cd" --date=short | sed "s|-||g"
}

prepare() {
  cd $_gitname
  git config remote.origin.url https://git::@${source##git+https://}.git
}

package() {
  cd $_gitname
  install -dm 755 "$pkgdir/$HOME/.vim/plugged/$_gitname"
  for _file in `ls -A`; do
    cp -dpr --no-preserve=ownership $_file "$pkgdir/$HOME/.vim/plugged/$_gitname"
  done
  find "$pkgdir" -mindepth 1 -maxdepth 1 -exec chown -R $USER:users '{}' \;
}
