# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=vim-lua-inspect-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git
_gitname=vim-lua-inspect
pkgver=20140617
pkgrel=1
pkgdesc="Semantic highlighting for Lua in Vim ($USER)"
arch=('any')
depends=('lua'
         'vim'
         "vim-misc-xolox-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git")
makedepends=('git')
groups=('vim-plugins')
url="https://github.com/xolox/vim-lua-inspect"
license=('MIT')
source=(git+https://github.com/xolox/vim-lua-inspect)
sha256sums=('SKIP')

pkgver() {
  cd $_gitname
  git log -1 --format="%cd" --date=short | sed "s|-||g"
}

prepare() {
  cd $_gitname
  git config remote.origin.url https://git::@${source##git+https://}.git
}

package() {
  cd $_gitname
  install -dm 755 "$pkgdir/$HOME/.vim/plugged/$_gitname"
  for _file in `ls -A`; do
    cp -dpr --no-preserve=ownership $_file "$pkgdir/$HOME/.vim/plugged/$_gitname"
  done
  find "$pkgdir" -mindepth 1 -maxdepth 1 -exec chown -R $USER:users '{}' \;
}
