# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=vim-colors-vibrantink-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git
_gitname=VibrantInk-for-Vim
pkgver=20141007
pkgrel=1
pkgdesc="Vim version of the VibrantInk Textmate theme ($USER)"
arch=('any')
depends=('vim')
makedepends=('git')
groups=('vim-plugins')
url="https://github.com/atweiden/VibrantInk-for-Vim"
license=('custom:vim')
source=(git+https://github.com/atweiden/VibrantInk-for-Vim#branch=plugin-manager-compatibility)
sha256sums=('SKIP')
install=vibrantink.install

pkgver() {
  cd $_gitname
  git log -1 --format="%cd" --date=short | sed "s|-||g"
}

prepare() {
  cd $_gitname
  git config remote.origin.url https://git::@github.com/atweiden/VibrantInk-for-Vim.git
}

package() {
  cd $_gitname
  install -dm 755 "$pkgdir/$HOME/.vim/plugged/$_gitname"
  find . -mindepth 1 -maxdepth 1 -exec \
    cp -dpr --no-preserve=ownership '{}' "$pkgdir/$HOME/.vim/plugged/$_gitname" \;
  find "$pkgdir" -mindepth 1 -maxdepth 1 -exec chown -R $USER:users '{}' \;
}
