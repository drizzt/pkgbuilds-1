# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=vim-lusty-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git
_gitname=lusty
pkgver=20140523
pkgrel=1
pkgdesc="LustyExplorer / LustyJuggler: Dynamic filesystem and buffer explorer for Vim ($USER)"
arch=('any')
depends=('ruby' 'vim')
makedepends=('git' 'make')
groups=('vim-plugins')
url="https://github.com/sjbach/lusty"
license=('MIT')
source=(git+https://github.com/sjbach/lusty)
sha256sums=('SKIP')
install=lusty.install

pkgver() {
  cd $_gitname
  git log -1 --format="%cd" --date=short | sed "s|-||g"
}

prepare() {
  cd $_gitname
  git config remote.origin.url https://git::@${source##git+https://}.git
}

build() {
  cd $_gitname
  make
}

package() {
  cd $_gitname
  install -dm 755 "$pkgdir/$HOME/.vim/plugged/$_gitname"
  find . -mindepth 1 -maxdepth 1 -exec \
    cp -dpr --no-preserve=ownership '{}' "$pkgdir/$HOME/.vim/plugged/$_gitname" \;
  find "$pkgdir" -mindepth 1 -maxdepth 1 -exec chown -R $USER:users '{}' \;
}
