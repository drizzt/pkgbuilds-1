_gitname=xterm-color-table.vim

pre_install() {
  post_remove
}

post_install() {
  printf "$colortable\n"
}

pre_upgrade() {
  post_remove
}

post_upgrade() {
  post_install
}

post_remove() {
  echo -n "Removing $_gitname directory... "
  rm -rf "$HOME/.vim/plugged/$_gitname"
  echo "done"
}

read -d '' colortable <<'EOF'
