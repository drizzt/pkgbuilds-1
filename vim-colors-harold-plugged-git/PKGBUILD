# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=vim-colors-harold-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git
_gitname=vim-colors-harold
pkgver=20131118
pkgrel=1
pkgdesc="Easy to read, eye-appealing color scheme based on Fabio Cevasco's herald.vim ($USER)"
arch=('any')
depends=('vim')
makedepends=('git')
groups=('vim-plugins')
url="https://github.com/PotatoesMaster/vim-colors-harold"
license=('custom:vim')
source=(git+https://github.com/PotatoesMaster/vim-colors-harold)
sha256sums=('SKIP')
install=harold.install

pkgver() {
  cd $_gitname
  git log -1 --format="%cd" --date=short | sed "s|-||g"
}

prepare() {
  cd $_gitname
  git config remote.origin.url https://git::@${source##git+https://}.git
}

package() {
  cd $_gitname
  install -dm 755 "$pkgdir/$HOME/.vim/plugged/$_gitname"
  for _file in `ls -A`; do
    cp -dpr --no-preserve=ownership $_file "$pkgdir/$HOME/.vim/plugged/$_gitname"
  done
  find "$pkgdir" -mindepth 1 -maxdepth 1 -exec chown -R $USER:users '{}' \;
}
