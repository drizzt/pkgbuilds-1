# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=vim-ingo-library-plugged-$(echo $USER | sha512sum | cut -c -128 | sha512sum | cut -c -8)-git
_gitname=ingo-library
pkgver=20140927
pkgrel=1
pkgdesc="Vimscript library of common functions by Ingo Karkat ($USER)"
arch=('any')
depends=('vim')
makedepends=('git')
groups=('vim-plugins')
url="https://github.com/vim-scripts/ingo-library"
license=('custom:vim')
source=(git+https://github.com/vim-scripts/ingo-library)
sha256sums=('SKIP')
install=ingo-library.install

pkgver() {
  cd $_gitname
  git log -1 --format="%cd" --date=short | sed "s|-||g"
}

prepare() {
  cd $_gitname
  git config remote.origin.url https://git::@${source##git+https://}.git
}

package() {
  cd $_gitname
  install -dm 755 "$pkgdir/$HOME/.vim/plugged/$_gitname"
  for _file in `ls -A`; do
    cp -dpr --no-preserve=ownership $_file "$pkgdir/$HOME/.vim/plugged/$_gitname"
  done
  find "$pkgdir" -mindepth 1 -maxdepth 1 -exec chown -R $USER:users '{}' \;
}
